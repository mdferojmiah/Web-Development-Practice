@model FoodApp.Models.Dish
@{
    ViewData["Title"] = "Details";
}

<h1 class="text-center">@ViewData["Title"]</h1>

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6">
            <img src="@Model.ImageUrl" class="img-fluid" alt="Food Image" style="height: 70%;"/>
        </div>
        <div class="col-md-6">
            <h2>@Model.Name</h2>
            <p>Price: <b>@Model.Price $</b></p>
            <ul>
                @foreach (var ingredient in Model.DishIngredients!)
                {
                    <li>@ingredient.Ingredient!.Name</li>
                }
            </ul>
            <a asp-controller="Menu" asp-action="Index" class="btn btn-primary">Back to Menu</a>
        </div>
</div>